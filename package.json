{
  "name": "jazer-ui-library",
  "version": "1.0.0",
  "description": "JaZeR UI - Component Library Master Index",
  "license": "MIT",
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "clean": "rimraf dist",
    "create": "node scripts/create-component.js",
    "build": "npm run clean && node scripts/build.js",
    "dev": "vite",
    "start": "http-server ./dist -p 5173 -c-1",
    "lint:js": "eslint \"**/*.js\" --max-warnings 0",
    "lint:css": "stylelint \"**/*.css\" --allow-empty-input",
    "lint:html": "html-validate \"**/*.html\"",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "format": "prettier --write \"**/*.{md,html,css,js,json}\"",
    "test": "playwright test",
    "test:ci": "npm run build && npx playwright test --timeout=120000",
    "postinstall": "npx playwright install --with-deps",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ],
    "*.css": [
      "stylelint --fix"
    ],
    "*.html": [
      "html-validate --fix"
    ]
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.3.0",
    "@playwright/test": "^1.44.0",
    "csso": "^5.0.0",
    "esbuild": "^0.18.20",
    "html-minifier-terser": "^6.1.0",
    "html-validate": "^8.5.2",
    "http-server": "^14.1.1",
    "husky": "^8.0.0",
    "lint-staged": "^14.0.0",
    "playwright": "^1.44.0",
    "prettier": "^3.5.0",
    "rimraf": "^5.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^32.0.0",
    "vite": "^5.1.1"
  }
}
