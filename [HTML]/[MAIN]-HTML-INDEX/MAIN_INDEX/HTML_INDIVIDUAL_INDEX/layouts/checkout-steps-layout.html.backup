<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkout Steps Layout</title>
  <style>
    /* ==================== RESET ==================== */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
      line-height: 1.6;
      color: #333;
      background-color: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: flex-start;
      min-height: 100vh;
      padding: 2rem;
    }

    .checkout-container {
      max-width: 900px;
      margin: 0 auto;
      background-color: #fff;
      padding: 3rem;
      border-radius: 12px;
      box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 2rem;
    }

    /* ==================== CHECKOUT PROGRESS (Stepper) ==================== */
    .checkout-progress {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 3rem;
      position: relative;
    }

    .checkout-progress::before {
      content: '';
      position: absolute;
      width: calc(100% - 60px);
      height: 4px;
      background-color: #e0e0e0;
      top: 50%;
      left: 30px;
      transform: translateY(-50%);
      z-index: 0;
    }

    .progress-step {
      width: 50px;
      height: 50px;
      border-radius: 50%;
      background-color: #e0e0e0;
      color: #fff;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: 700;
      font-size: 1.2rem;
      z-index: 1;
      position: relative;
      transition: background-color 0.3s ease;
    }

    .progress-step--active {
      background-color: #3498db;
    }

    .progress-step--completed {
      background-color: #2ecc71;
    }

    .progress-step::after {
        content: attr(data-label);
        position: absolute;
        top: calc(100% + 5px);
        left: 50%;
        transform: translateX(-50%);
        font-size: 0.9rem;
        color: #555;
        white-space: nowrap;
        text-align: center;
    }

    /* ==================== CHECKOUT PANES ==================== */
    .checkout-pane {
      display: none; /* Hidden by default */
      animation: fadein 0.5s ease-in-out;
      padding: 1rem;
      border: 1px solid #e0e0e0;
      border-radius: 8px;
      background-color: #fcfcfc;
    }

    .checkout-pane--active {
      display: block;
    }

    @keyframes fadein {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .checkout-pane h2 {
      color: #34495e;
      margin-bottom: 1.5rem;
      text-align: center;
      font-size: 2rem;
    }

    .form-group {
      margin-bottom: 1rem;
    }

    .form-group label {
      display: block;
      margin-bottom: 0.5rem;
      font-weight: 600;
      color: #555;
    }

    .form-group input[type="text"],
    .form-group input[type="email"],
    .form-group input[type="tel"],
    .form-group input[type="number"],
    .form-group input[type="password"],
    .form-group select,
    .form-group textarea {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      transition: border-color 0.3s, box-shadow 0.3s;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
      outline: none;
      border-color: #3498db;
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }

    /* Order Summary (for demo) */
    .order-summary {
        margin-top: 2rem;
        padding: 1.5rem;
        background-color: #e6f7ff;
        border: 1px solid #b3e0ff;
        border-radius: 8px;
    }
    .order-summary h3 {
        color: #3498db;
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid #addbff;
    }
    .order-summary ul {
        list-style: none;
        padding: 0;
        margin-bottom: 1rem;
    }
    .order-summary li {
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
        font-size: 0.95rem;
    }
    .order-summary .total {
        font-weight: 700;
        font-size: 1.1rem;
        border-top: 1px solid #b3e0ff;
        padding-top: 0.8rem;
        margin-top: 1rem;
    }

    /* ==================== NAVIGATION BUTTONS ==================== */
    .checkout-navigation {
      display: flex;
      justify-content: space-between;
      margin-top: 3rem;
    }

    .btn {
      padding: 12px 25px;
      font-size: 1.05rem;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .btn--primary {
      background-color: #3498db;
      color: #fff;
    }

    .btn--primary:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(52, 152, 219, 0.2);
    }

    .btn--secondary {
      background-color: #95a5a6;
      color: #fff;
    }

    .btn--secondary:hover {
      background-color: #7f8c8d;
      transform: translateY(-2px);
    }

    .btn:disabled {
      background-color: #cccccc;
      cursor: not-allowed;
    }

    .btn--place-order {
      background-color: #2ecc71;
    }

    .btn--place-order:hover {
      background-color: #27ae60;
    }

    .order-confirmation {
        text-align: center;
        padding: 3rem 0;
        display: none;
    }
    .order-confirmation h2 {
        color: #2ecc71;
        font-size: 2.5rem;
        margin-bottom: 1.5rem;
    }
    .order-confirmation p {
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    /* ==================== RESPONSIVE ==================== */
    @media (max-width: 768px) {
        .checkout-container {
            padding: 1.5rem;
        }
        .checkout-progress {
            flex-wrap: wrap;
            justify-content: center;
            gap: 1rem;
        }
        .checkout-progress::before {
            display: none;
        }
        .progress-step {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }
        .progress-step::after {
            font-size: 0.8rem;
        }
        .checkout-navigation {
            flex-direction: column-reverse; /* Next button on top of previous */
            gap: 1rem;
        }
        .btn {
            width: 100%;
        }
    }
  </style>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700;800;900&family=Outfit:wght@400;600;700;800&family=DM+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="../../jazer-brand.css">
  </head>
<body>

  <div class="checkout-container">
    <h1>Multi-Step Checkout</h1>

    <div class="checkout-progress" id="checkoutProgress">
      <div class="progress-step" data-step="0" data-label="Shipping">1</div>
      <div class="progress-step" data-step="1" data-label="Payment">2</div>
      <div class="progress-step" data-step="2" data-label="Review">3</div>
      <div class="progress-step" data-step="3" data-label="Complete">4</div>
    </div>

    <form id="checkoutForm">
      <!-- Shipping Pane -->
      <div class="checkout-pane checkout-pane--active" data-step="0">
        <h2>Shipping Information</h2>
        <div class="form-group">
            <label for="fullName">Full Name</label>
            <input type="text" id="fullName" name="fullName" required>
        </div>
        <div class="form-group">
            <label for="address">Address Line 1</label>
            <input type="text" id="address" name="address" required>
        </div>
        <div class="form-group">
            <label for="city">City</label>
            <input type="text" id="city" name="city" required>
        </div>
        <div class="form-group">
            <label for="zip">Zip Code</label>
            <input type="text" id="zip" name="zip" required>
        </div>
        <div class="form-group">
            <label for="country">Country</label>
            <select id="country" name="country" required>
                <option value="">Select Country</option>
                <option value="usa">United States</option>
                <option value="can">Canada</option>
                <option value="gbr">United Kingdom</option>
            </select>
        </div>
        <div class="order-summary">
            <h3>Order Summary</h3>
            <ul>
                <li>Product A <span>$100.00</span></li>
                <li>Product B <span>$50.00</span></li>
                <li>Shipping <span>$5.00</span></li>
            </ul>
            <div class="total">Total <span>$155.00</span></div>
        </div>
      </div>

      <!-- Payment Pane -->
      <div class="checkout-pane" data-step="1">
        <h2>Payment Details</h2>
        <div class="form-group">
            <label for="cardNumber">Card Number</label>
            <input type="text" id="cardNumber" name="cardNumber" placeholder="xxxx xxxx xxxx xxxx" required>
        </div>
        <div class="form-group">
            <label for="cardName">Name on Card</label>
            <input type="text" id="cardName" name="cardName" required>
        </div>
        <div class="form-group" style="display: flex; gap: 1rem;">
            <div style="flex: 1;">
                <label for="expiryDate">Expiry Date</label>
                <input type="text" id="expiryDate" name="expiryDate" placeholder="MM/YY" required>
            </div>
            <div style="flex: 1;">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" name="cvv" placeholder="xxx" required>
            </div>
        </div>
        <div class="order-summary">
            <h3>Order Summary</h3>
            <ul>
                <li>Product A <span>$100.00</span></li>
                <li>Product B <span>$50.00</span></li>
                <li>Shipping <span>$5.00</span></li>
            </ul>
            <div class="total">Total <span>$155.00</span></div>
        </div>
      </div>

      <!-- Review Pane -->
      <div class="checkout-pane" data-step="2">
        <h2>Review Your Order</h2>
        <div class="order-summary">
            <h3>Shipping Details</h3>
            <p><strong id="reviewName"></strong></p>
            <p><span id="reviewAddress"></span>, <span id="reviewCity"></span>, <span id="reviewZip"></span></p>
            <p><span id="reviewCountry"></span></p>

            <h3>Payment Details</h3>
            <p>Card Ending: <strong id="reviewCardLast4"></strong></p>
            <p>Name: <span id="reviewCardName"></span></p>

            <h3>Final Order Summary</h3>
            <ul>
                <li>Product A <span>$100.00</span></li>
                <li>Product B <span>$50.00</span></li>
                <li>Shipping <span>$5.00</span></li>
            </ul>
            <div class="total">Grand Total <span>$155.00</span></div>
        </div>
      </div>

      <!-- Confirmation Pane -->
      <div class="checkout-pane" data-step="3">
        <h2>Order Confirmed!</h2>
        <div class="order-confirmation">
            <h2>ðŸŽ‰ Thank You for Your Order!</h2>
            <p>Your order <strong id="orderNumber">#123456789</strong> has been placed successfully.</p>
            <p>A confirmation email has been sent to your inbox.</p>
            <p>Expected delivery: <strong id="deliveryDate">December 10, 2023</strong></p>
            <button type="button" class="btn btn--primary" onclick="window.location.reload()">Continue Shopping</button>
        </div>
      </div>

      <div class="checkout-navigation">
        <button type="button" class="btn btn--secondary" id="prevStep" disabled>Previous</button>
        <button type="button" class="btn btn--primary" id="nextStep">Next</button>
        <button type="submit" class="btn btn--primary btn--place-order" id="placeOrder" style="display: none;">Place Order</button>
      </div>
    </form>

  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const progressSteps = document.querySelectorAll('.checkout-progress .progress-step');
      const checkoutPanes = document.querySelectorAll('.checkout-pane');
      const prevBtn = document.getElementById('prevStep');
      const nextBtn = document.getElementById('nextStep');
      const placeOrderBtn = document.getElementById('placeOrder');
      const checkoutForm = document.getElementById('checkoutForm');

      let currentStepIndex = 0;

      /**
       * Displays the current checkout pane and updates progress.
       * @param {number} index - The index of the step to display.
       */
      function showStep(index) {
        // Hide all panes
        checkoutPanes.forEach(pane => pane.classList.remove('checkout-pane--active'));
        // Show current pane
        checkoutPanes[index].classList.add('checkout-pane--active');

        // Update progress steps styling
        progressSteps.forEach((step, i) => {
          step.classList.remove('progress-step--active', 'progress-step--completed');
          if (i === index) {
            step.classList.add('progress-step--active');
          } else if (i < index) {
            step.classList.add('progress-step--completed');
          }
        });

        // Update navigation buttons
        prevBtn.style.display = index === 0 ? 'none' : 'inline-block';
        nextBtn.style.display = index === checkoutPanes.length - 2 ? 'none' : 'inline-block'; // 'Next' until review step
        placeOrderBtn.style.display = index === checkoutPanes.length - 2 ? 'inline-block' : 'none'; // 'Place Order' on review step
        
        // Hide navigation buttons on confirmation page
        if (index === checkoutPanes.length - 1) {
            prevBtn.style.display = 'none';
            nextBtn.style.display = 'none';
            placeOrderBtn.style.display = 'none';
        }

        if (index === checkoutPanes.length - 2) { // Review step
            populateReviewStep();
        }
      }

      /**
       * Validates the current checkout step.
       * (Simplified validation for demonstration)
       * @returns {boolean} True if the current step is valid, false otherwise.
       */
      function validateCurrentStep() {
        const currentPane = checkoutPanes[currentStepIndex];
        const requiredInputs = currentPane.querySelectorAll('input[required], select[required], textarea[required]');
        let isValid = true;

        requiredInputs.forEach(input => {
          if (!input.value.trim()) {
            input.style.borderColor = 'red'; // Simple visual feedback
            isValid = false;
          } else {
            input.style.borderColor = '#ccc';
          }
        });
        return isValid;
      }

      /**
       * Populates the review step with data from previous steps.
       */
      function populateReviewStep() {
          document.getElementById('reviewName').textContent = document.getElementById('fullName').value;
          document.getElementById('reviewAddress').textContent = document.getElementById('address').value;
          document.getElementById('reviewCity').textContent = document.getElementById('city').value;
          document.getElementById('reviewZip').textContent = document.getElementById('zip').value;
          document.getElementById('reviewCountry').textContent = document.getElementById('country').options[document.getElementById('country').selectedIndex].text;

          const cardNumber = document.getElementById('cardNumber').value;
          document.getElementById('reviewCardLast4').textContent = cardNumber.slice(-4);
          document.getElementById('reviewCardName').textContent = document.getElementById('cardName').value;
      }

      // --- Event Listeners ---
      prevBtn.addEventListener('click', () => {
        if (currentStepIndex > 0) {
          currentStepIndex--;
          showStep(currentStepIndex);
        }
      });

      nextBtn.addEventListener('click', () => {
        if (validateCurrentStep()) {
          if (currentStepIndex < checkoutPanes.length - 1) {
            currentStepIndex++;
            showStep(currentStepIndex);
          }
        } else {
          alert('Please fill in all required fields to proceed.');
        }
      });

      placeOrderBtn.addEventListener('click', (e) => {
        e.preventDefault(); // Prevent form default submission
        if (validateCurrentStep()) {
            // Simulate order placement
            alert('Placing your order... (Simulated)');
            // In a real application, you would send order data to a server.
            console.log('Order Data:', new FormData(checkoutForm));

            // Proceed to confirmation step
            currentStepIndex = checkoutPanes.length - 1;
            showStep(currentStepIndex);
        } else {
            alert('Please review your details before placing the order.');
        }
      });

      // Initial display
      showStep(currentStepIndex);
    });
  </script>

</body>
</html>
